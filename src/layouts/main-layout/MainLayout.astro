---
import Header from "@/layouts/main-layout/Header.astro";
import "@/styles/global.css";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const baseTitle = "KyButler";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title ? `${baseTitle} - ${title}` : baseTitle}</title>

        <style is:global>
            :root {
                --brand-red: #901f22;
                --brand-pink: #f3b9b9;
                --brand-white: #ffffff;
                --brand-gray: #e0e0e0;
                --brand-black: #0a0a0a;

                --twitch-purple: #9146ff;
                --youtube-red: #cd201f;
                --discord-blurple: #5865f2;
                --x-black: #000000;
                --instagram-gradient: linear-gradient(
                    45deg,
                    #f09433 0%,
                    #e6683c 25%,
                    #dc2743 50%,
                    #cc2366 75%,
                    #bc1888 100%
                );
                --tiktok-black: #000000;
            }

            @font-face {
                font-family: "FugazOne";
                src: url("/fonts/FugazOne-Regular.ttf") format("truetype");
                font-weight: normal;
                font-style: normal;
                font-display: swap;
            }

            body {
                min-height: 100vh;
                background-color: var(--brand-black);
                color: var(--brand-white);
                font-family: sans-serif;
            }

            .text-fugaz {
                font-family: "FugazOne", sans-serif;
            }

            .texture-layer {
                position: fixed;
                inset: 0;
                z-index: -1;

                width: 100vw;
                height: 100vh;

                opacity: 0.15;
                pointer-events: none;
                filter: contrast(120%) brightness(100%);
            }
        </style>
    </head>

    <body>
        <svg class="texture-layer" xmlns="http://www.w3.org/2000/svg">
            <filter id="noiseFilter">
                <feTurbulence
                    type="fractalNoise"
                    baseFrequency="0.6"
                    numOctaves="3"
                    stitchTiles="stitch"></feTurbulence>
            </filter>
            <rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
        </svg>

        <Header />

        <main class="relative z-10">
            <slot />
        </main>
    </body>
</html>
