---
import Section from "@/components/Section.astro";
import Social from "./Social.astro";

const socials = [
    {
        color: "--twitch-purple",
        name: "Twitch",
        url: "https://www.twitch.tv/kybutler",
    },
    {
        color: "--youtube-red",
        name: "YouTube",
        url: "https://www.youtube.com/kybutler",
    },
    {
        color: "--discord-blurple",
        name: "Discord",
        url: "https://discord.com/invite/mgWCDbe",
    },
    {
        color: "--x-black",
        name: "X",
        url: "https://x.com/kybutler_",
    },
    {
        color: "--instagram-gradient",
        name: "Instagram",
        url: "https://www.instagram.com/kybutler_",
    },
    {
        color: "--tiktok-black",
        name: "TikTok",
        url: "https://www.tiktok.com/@kybutler_",
    },
];
---

<Section class="container mx-auto flex flex-col gap-4">
    <h2 class="text-5xl text-fugaz text-center">Socials</h2>

    <div class="flex flex-col gap-4">
        {
            socials.map((social) => (
                <Social
                    class="px-4"
                    color={social.color}
                    name={social.name}
                    url={social.url}
                />
            ))
        }
    </div>
</Section>
